// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id
  lastName    String
  firstName   String
  phoneNumber String
  email       String
  rating      Int
  interests   String[]
  location    String
  plans       Plan[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Plan {
  id           String @id @default(uuid())
  name         String
  description  String
  location     String
  minAttendees Int
  maxAttendees Int
  attendees    User[]
  time         DateTime
  image        String
  tags         String[]
  state        String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}