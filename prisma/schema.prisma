// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id

  lastName     String
  firstName    String
  phoneNumber  String
  email        String

  rating       Int
  interests    String[]
  location     String

  plans        UsersOnPlans[]

  createdPlans Plan[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Plan {
  id           String @id @default(uuid())

  name         String
  description  String
  location     String
  minAttendees Int
  maxAttendees Int
  time         DateTime
  image        String
  tags         String[]
  state        String

  creator      User @relation(fields: [creatorId], references: [id])
  creatorId    String

  attendees    UsersOnPlans[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UsersOnPlans {
  user   User @relation(fields: [userId], references: [id])
  userId String 
  plan   Plan @relation(fields: [planId], references: [id])
  planId String 
  
  @@id([userId, planId])
}